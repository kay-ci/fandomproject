<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="FandomAppSpace.Views.EventDisplayView">
             
  <StackPanel Margin="10,0,0,0">

    <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">

          <Button Command="{Binding CreateEventBtn}"> 
                  Create New Event
          </Button>
          <Button Command="{Binding EditEventBtn}">
                  <!--<Image Source="/Assets/Icons/icons-event.png" Width="20" Height="20"/> -->
                  Edit Event
          </Button>
          <Button Command="{Binding SearchEventBtn}">
                  <!--<Image Source="/Assets/Icons/icons-search.png" Width="20" Height="20"/> -->
                  Search Events
          </Button>
    </StackPanel>

    <StackPanel Spacing="10">
      <TextBlock Text="My Events" FontSize="35"/> 

      <ItemsRepeater Items="{Binding Events}">
          <ItemsRepeater.ItemTemplate>
            <DataTemplate>
            <StackPanel>
              <TextBlock Text="{Binding Title}" FontSize="28"/> 
              <TextBlock Text="{Binding Date}"/>
              <TextBlock Text="{Binding Location}"/>
              <TextBlock Text="{Binding MinAge}"/>
              <TextBlock Text="{Binding Owner.Username, StringFormat='Organized By: {0}'}"/>

              <Button Command="{Binding $parent[Window].DataContext.DisplaySingleEventPage}" CommandParameter="{Binding}"> Show more infos </Button>
            </StackPanel>
            </DataTemplate>
          </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>

    </StackPanel>
    
  </StackPanel>
</UserControl>